{% extends 'base.html.twig' %}

{% block title %}Weather in {{ location.cityName }}, {{ location.countryCode }}{% endblock %}

{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="example-wrapper">
<h1>{{ location.cityName }}, {{ location.countryCode }}</h1>
    <ul>
    {% for measurement in measurements %}
        <li>{{ measurement.date|date('d.m.Y H:i:s') }}: {{ measurement.temperature }}&deg;C, {{ measurement.description }}</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}