{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ measurement.Temperature }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ measurement.Description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.Date ? measurement.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_crud_index') }}">back to list</a>

    <a href="{{ path('app_measurement_crud_edit', {'id': measurement.id}) }}">edit</a>

